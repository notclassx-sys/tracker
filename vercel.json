{
    "version": 2,
    "builds": [
        {
            "src": "frontend/dist/**",
            "use": "@vercel/static"
        },
        {
            "src": "backend/server.mjs",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.mjs"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/$1"
        }
    ]
}